{
    "compilerOptions": {
        "outDir": "build",
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ES2022",
        "target": "ES2022",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "lib": ["DOM", "ES5", "ES6", "ES7", "ES2022"],
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["reflect-metadata", "jest", "node"],
        "paths": {
            "@preact/compat": ["./node_modules/preact/compat/"],
            "react": ["./node_modules/preact/compat/"],
            "react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
            "react-dom": ["./node_modules/preact/compat/"],
            "react-dom/*": ["./node_modules/preact/compat/*"],
            "api/*": ["./node_modules/obsidian-dataview/lib/api/*"],
            "data-index/*": ["./node_modules/obsidian-dataview/lib/data-index/*"],
            "data-model/*": ["./node_modules/obsidian-dataview/lib/data-model/*"],
            "expression/*": ["./node_modules/obsidian-dataview/lib/expression/*"],
            "query/*": ["./node_modules/obsidian-dataview/lib/query/*"],
            "settings": ["./node_modules/obsidian-dataview/lib/settings/"],
            "typings/*": ["./node_modules/obsidian-dataview/lib/typings/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "typeAcquisition": {
        "include": ["jest"]
    }
}
